<h1>Chat</h1>

<div id="chat">
<table>
  <tr>
    <th>Name</th>
    <th>Message</th>
  </tr>

<% @chats.each do |c| %>
  <tr id=<%= c["author_id"] %>>
  	 <td><%= c["author_id"] %></td>
    <td><%= c["body"] %></td>
  </tr>
<% end %>
</table>

<%= form_for(@message) do |f| %>
  <div class="field">
    <%= f.label :message_body %><br />
    <%= f.text_field :message_body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>