<h1>Chat</h1>

<div id="chat">
<table>
  <tr>
    <th>Name</th>
    <th>Message</th>
  </tr>

<% @chats.each do |c| %>
  <tr id=<%= c["author_id"] %>>
  	 <td><%= c["author_id"] %></td>
    <td><%= c["body"] %></td>
  </tr>
<% end %>
</table>

<%= @message.receiver_id %>

<%= form_for(@message,:remote=> true) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :receiver_id, :value => @message.receiver_id%>
  </div>

  <div class="field">
    <%= f.label :message_body %><br />
    <%= f.text_field :message_body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>